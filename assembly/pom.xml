<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.openntf.xrest</groupId>
		<artifactId>xrest.parent</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>
	<artifactId>xrest.assembly</artifactId>
	<packaging>pom</packaging>
	<name>XREST - complete Assembly</name>
	<properties>
		<kit.parentDir>${project.basedir}/../../</kit.parentDir>
		<kit.workingDir>${project.build.directory}</kit.workingDir>
		<kit.finalAssemblyFolder>${kit.workingDir}/kit</kit.finalAssemblyFolder>
		<kit.sourceCodeUrl>https://codeload.github.com/OpenNTF/SmartNSF/zip/</kit.sourceCodeUrl>
		<kit.sourceBranch>main</kit.sourceBranch>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>com.googlecode.maven-download-plugin</groupId>
				<artifactId>download-maven-plugin</artifactId>
				<version>1.6.8</version>
				<executions>
					<execution>
						<id>download-sources</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>wget</goal>
						</goals>
						<configuration>
							<url>${kit.sourceCodeUrl}${kit.sourceBranch}</url>
							<unpack>false</unpack>
							<skipCache>true</skipCache>
							<outputFileName>org.openntf.xrest.sources.zip</outputFileName>
							<outputDirectory>${kit.workingDir}/sources/SmartNSF</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
			<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<id>removedownloadsAndResults</id>
						<phase>clean</phase>
						<configuration>
							<target>
								<delete dir="${kit.workingDir}/sources" />
								<delete dir="${kit.parentDir}/${kit.result}"/>
							</target>
						</configuration>
						<goals><goal>run</goal></goals>
					</execution>
					<execution>
						<id>p2repo</id>
						<phase>package</phase>
						<configuration>
							<target>
								<unzip
									src="../server/org.openntf.xrest.xsp.p2/target/org.openntf.xrest.xsp.p2-${project.version}.zip"
									dest="${kit.finalAssemblyFolder}/p2-${p2.buildVersion}" />
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>			
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.4</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<descriptor>assembly.xml</descriptor>
							<finalName>SmartNSF-${kit.buildVersion}</finalName>
							<appendAssemblyId>false</appendAssemblyId>
							<outputDirectory>${kit.finalAssemblyFolder}</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>