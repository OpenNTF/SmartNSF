<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>default</id>
	<formats>
		<format>zip</format>
	</formats>
	<baseDirectory>target</baseDirectory>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}/sources/SmartNSF</directory>
			<includes>
				<include>org.openntf.xrest*</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../</directory>
			<includes>
				<include>*.txt</include>
				<include>LICENSE</include>
				<include>README.md</include>
			</includes>
			<outputDirectory></outputDirectory>
		</fileSet>

		<fileSet>
			<directory>../server/org.openntf.xrest.xsp.updatesite/target</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>org.openntf.xrest.xsp.updatesite*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../designer/org.openntf.xrest.designer.updatesite/target</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>org.openntf.xrest.designer.updatesite*</include>
			</includes>
		</fileSet>
	</fileSets>
	<moduleSets>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>org.openntf.xrest.libraries:org.opentntf.xrest.xsp</include>
			</includes>
			<binaries>
				<attachmentClassifier>javadoc</attachmentClassifier>
				<includeDependencies>false</includeDependencies>
				<outputDirectory>/apidocs/${module.artifactId}</outputDirectory>
				<unpack>true</unpack>
			</binaries>
		</moduleSet>
	</moduleSets>
</assembly>
